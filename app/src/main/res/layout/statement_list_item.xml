<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:color="@android:color/white">

        <TextView
            android:id="@+id/tv_statement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="18.8dp"
            android:lineSpacingExtra="18sp"
            android:textColor="#FFA8B4C4"
            android:textSize="16dp"
            tools:text="@string/str_operation_type" />

        <TextView
            android:id="@+id/tv_statement_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="56dp"
            android:lineSpacingExtra="18sp"
            android:text="Conta de luz"
            android:textColor="#FF485465"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24.2dp"
            android:layout_marginEnd="32.5dp"
            android:textColor="#A8B4C4"
            android:textSize="14dp"
            tools:text="12/12/2018" />

        <TextView
            android:id="@+id/statement_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="27dp"
            android:lineSpacingExtra="18sp"
            android:text="@string/user_balance"
            android:textColor="#485465"
            android:textSize="22dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>